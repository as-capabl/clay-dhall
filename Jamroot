
path-constant plan-json
    : ./dist-newstyle/cache/plan.json
    ;

local dist-dir = [
    SHELL "cabal new-exec aux-list-path -- $(plan-json) dist-dir"
        : strip-eol
    ] ;

lib claydhall_test_link
    :
    : <name>clay-dhall <search>$(dist-dir)/build/clay-dhall
    :
    : <include>include <library-path>$(dist-dir)/build/clay-dhall
    ;

# Sub projects
build-project ctest
    ;

# Make windows distribution
install windist/include
    : [ glob include/clay-dhall/*.h ]
    : <install-source-root>include
    ;

install windist/lib
    : [ glob $(dist-dir)/build/clay-dhall/*.dll ]
    ;

# Generate DEF
import type ;
type.register DEF : def ;

import generators ;
generators.register-standard def.dlltool-def : DEF : DLL ;

actions dlltool-def {
    dlltool --dllname $(<) --output-def $(>)
}

